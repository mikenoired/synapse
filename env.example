# Основные настройки
NODE_ENV=development

# База данных PostgreSQL
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
POSTGRES_DB=synapse
POSTGRES_PORT=5432

# Redis
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# MinIO
MINIO_PORT=9000
MINIO_CONSOLE_PORT=9001
MINIO_ACCESS_KEY=minioadmin
MINIO_SECRET_KEY=minioadmin
MINIO_BUCKET_NAME=synapse

# Go Thumbnail Service
THUMBNAIL_SERVICE_ENDPOINT=localhost:50051
THUMBNAIL_GRPC_PORT=50051
THUMBNAIL_MAX_JOBS=10
THUMBNAIL_MAX_IMAGE_SIZE=52428800
THUMBNAIL_MAX_VIDEO_SIZE=524288000
THUMBNAIL_WIDTH=20
THUMBNAIL_HEIGHT=0
THUMBNAIL_JPEG_QUALITY=40

# JWT
JWT_SECRET=your-super-secret-jwt-key-here
JWT_REFRESH_SECRET=your-super-secret-refresh-key-here

# tRPC
TRPC_SLOW_MS=300
