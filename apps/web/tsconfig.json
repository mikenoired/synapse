{
  "extends": "@synapse/tsconfig/nextjs.json",
  "compilerOptions": {
    "experimentalDecorators": true,
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "src/*"
      ]
    },
    "strictNullChecks": true
  },
  "include": [
    "../../packages/tsconfig/src",
    "../../packages/tsconfig/next-env.d.ts",
    "../../packages/tsconfig/../types/next-auth.d.ts",
    "../../packages/tsconfig/../types/*.d.ts",
    ".next/types/**/*.ts"
  ]
}
